pipeline {
    agent any

    stages {
        stage ('installing requirements'){
            steps{
                sh 'pip3 install -r requirements.txt'
            }
        }

        stage('changing build id'){
            steps{
                sh 'export JENKINS_SERVER_COOKIE=dontKillMe'
            }
            
        }

        stage('Stopping earlier worker'){
            steps{
                sh '''
                pkill -f whook.py
pkillexitstatus=$?

if [ $pkillexitstatus -eq 0 ]; then
    echo "one or more processes matched the criteria"
elif [ $pkillexitstatus -eq 1]; then
    echo "no processes matched"
elif [ $pkillexitstatus -eq 2]; then
    echo "syntax error in the command line"
elif [ $pkillexitstatus -eq 3]; then
    echo "fatal error"
else
    echo UNEXPECTED
fi '''


            }
        }

        stage('starting updated worker'){
            steps{
                sh 'nohup python3 whook.py > $WORKSPACE/scriptOutput.txt 2>&1 &'

            }
            
        }
    }
}